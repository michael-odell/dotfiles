#!/usr/bin/env bash

flux get source git
sourceret=$?
echo
flux get kustomization -A
kustomizationret=$?
echo
flux get helmrelease -A
helmret=$?

if [[ ${sourceret} == 0 && ${kustomizationret} == 0 && ${helmret} == 0 ]] ; then
    exit 0
else
    echo "Saw failures" >&2
    declare -p sourceret kustomizationret helmret >&2
    exit 1
fi
