#!/usr/bin/env bash

set -euo pipefail

HOSTS=( )
PORT=22
JUMP_HOSTS=( )
while [[ $# -gt 0 ]] ; do

    case $1 in
        -p)
            PORT=$2
            shift
            ;;

        -J)
            JUMP_HOSTS+=( $2 )
            shift
            ;;

        *)
            HOSTS+=( $1 )
            ;;
    esac

    shift

done

if [[ ${#HOSTS[@]} -lt 1 ]] ; then
    echo "You must specify at least one host to push ssh authorized key to." >&2
fi


for host in "${HOSTS[@]}" ; do

    green "${host}"

    RUN_SSH=(ssh -p ${PORT} -oStrictHostKeyChecking=accept-new)

    if [[ ${#JUMP_HOSTS[@]} -gt 0 ]] ; then
        for jh in "${JUMP_HOSTS[@]}" ; do
            RUN_SSH+=(-J "${jh}" )
        done
    fi

    # TODO STOP BEING RANCHER
    RUN_SSH+=( "rancher@${host}" )
    # TODO STOP BEING RANCHER

    # TODO STOP BEING RANCHER
    #op read 'op://private/modell-at-onbmc-com/public key' \
    #    | sshpass -p "$(op read op://BMC/onbmc-sso/password)" "${RUN_SSH[@]}" 'bash -c "mkdir -p .ssh ; cat >> .ssh/authorized_keys ; chmod -R og-rwx .ssh"' \
    #    || echo "FAILED."
    op read 'op://BMC/rancher_ssh_key/public key' \
        | sshpass -p "$(op read op://BMC/rancher-node/password)" "${RUN_SSH[@]}" 'bash -c "mkdir -p .ssh ; cat >> .ssh/authorized_keys ; chmod -R og-rwx .ssh"' \
        || echo "FAILED."
done
