mkdir -p ~/.cache/cached-eval
local filename=~/.cache/cached-eval/"${argv[*]//[^-A-Za-z0-9]/_}"

if (( ! ${#argv} )) ; then
    echo "cached-eval: no command supplied" >&2
    return 1
fi

if [[ ! -e "${filename}" ]] ; then
    echo "cached-eval: Generating cache for ${argv[*]}" >&2
    "${argv[@]}" > ${filename}

    if [[ $? -ne 0 ]] ; then
        echo "cached-eval: command failed: ${argv[*]}" >&2
        rm -f "${filename}"
        return 2
    fi
fi
source "${filename}"

# vim: set ft=zsh:
